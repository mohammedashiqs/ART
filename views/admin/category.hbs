<section>
<div class="mt-5 d-flex justify-content-center fixed-top bg-white">
    <h1 class="landfont mt-5"> ALL CATEGORIES</h1>
</div>
    <div class="container">
        <div class="row mt-4">
            <div class="col-md-6">
            <form action="/admin/add-category" method="post" enctype="multipart/form-data">
                <label for="">Image</label>
                <input type="file" name="image" class="form-control">
                <label for="">Category name</label>
                <input type="text" class="form-control" name="subCategoryName"><br>
                <button type="submit" class="btn btn-success mt-2">Add Category</button>
            </form>
            </div>
        </div>

        <table class="table mt-5" id="categoriesTable">
            <thead>
                <tr>
                    <th scope="col">Sl</th>
                    <th scope="col">Category</th>
                    <th scope="col">Image</th>
                    <th scope="col">Option</th>
                </tr>
            </thead>
            <tbody>
                {{#each subCategories}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.subCategoryName}}</td>
                    <td><img style="width: 50px; height:50px" src="/images/category/{{this._id}}.jpg" alt=""></td>
                    <td>
                        <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger"
                            onclick=" return confirm('Are you want to delete {{this.subCategoryName}}')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>
</section>


<script>
    $(function () {
        $('#categoriesTable').DataTable();
    })

</script>