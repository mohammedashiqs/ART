<section>
    <div class="d-flex justify-content-center fixed-top mt-5 bg-white">
        <h1 class="landfont mt-5"> ALL USERS</h1>
    </div>

    <div class="container pt-5">

        <div class="row">

        <div class="heading">
            <a href="#" role="button" class="btn btn-success ms-auto col-2">Add User</a>
        </div>

        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">Sl</th>
                    <th scope="col">Ordered Date</th>
                    <th scope="col">Delivery Address</th>
                    <th scope="col">payment Method</th>
                    <th scope="col">Total Amount</th>
                    <th scope="col">Order Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.status}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    $(function () {
        $('#productsTable').DataTable();
    })
</script>