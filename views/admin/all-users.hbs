<section>
    <div class="container">

        <div class="row mt-4">
            <a href="#" role="button" class="btn btn-success ms-auto col-2">Add User</a>
        </div>

        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">Sl</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Block User</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    {{!-- <td>{{this.status}}</td> --}}
                    
                    <td>
                        
                        <a href="/admin/all-users" class="btn btn-danger" onclick="return confirm('Are you want to delete the user {{this.name}} ?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    $(function () {
        $('#productsTable').DataTable();
    })
</script>