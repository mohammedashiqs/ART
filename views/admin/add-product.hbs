<section>
    <div class="container mt-4">
        <div class="row">

            <div class="col-md-6">
                <h2 class="text-center">Add Products</h2>
                {{!-- for file sent to server --}}
                <form action="/admin/add-product" method="post" enctype="multipart/form-data">
                    <label for="">Brand Name</label>
                    <input type="text" name="brand" class="form-control">

                    <label for="subCategory" class="mr-2" >Sub Category</label>
                    <select name="subCategory" id="subCategory" class="form-control" required="true">
                        <option selected>Select Sub Category</option>
                        {{#each subCategories}}
                        <option>{{this.subCategoryName}}</option>
                        {{/each}}

                    </select>

                    <label for="">Color</label>
                    <input type="text" name="color" class="form-control">

                    <label for="">Price</label>
                    <input type="number" name="price" class="form-control">

                    <label for="">Discount Price</label>
                    <input type="number" name="discountPrice" class="form-control">

                     <label for="">Discount</label>
                    <input type="number" name="discount" class="form-control">

                    <label for="">Description</label>
                    <input type="text" name="description" class="form-control">

                    <label for="">Gender</label>
                    <input type="text" name="gender" class="form-control">

                    <label for="">Image</label>
                    <input type="file" name="image" class="form-control" required="true">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>


                </form>
            </div>

        </div>
    </div>
</section>