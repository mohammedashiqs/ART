<section class="container mt-5">
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/carousel/carousel1.jpg"
                    class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/carousel/carousel2.jpg"
                    class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/carousel/carousel3.jpg"
                    class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>


<div class="mt-3 d-flex justify-content-center">
    <h1 class="landfont mt-5"> SHOP BY CATEGORY </h1>
</div>


<section>
  <div class="container mt-5">
    <div class="row">
      {{#each subCategories}}

      
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 p-3">
      <a href="/view-products?subCategory={{this.subCategoryName}}" class="text-decoration-none text-dark"><div class="card">
        <div class="card-img-wrap"><img class="card-img-top" src="/images/category/{{this._id}}.jpg" alt="Denim Jeans" style="width:100%"></div>
        <h3><b>{{this.subCategoryName}}</b></h3>
        
      </div>
      </a>
      </div>
     
      {{/each}}
    </div>
  </div>
</section>

